<h2>Schema for '<%= @table.name %>' table</h2>

<%= link_to "Entries", table_entries_path(@table) %>

<table>
  <thead>
    <tr>
      <% @table.column_properties.each do |key| %>
        <th><%= key %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @table.columns.each do |col| %>
      <tr>
        <% @table.column_properties.each do |key| %>
          <td class="<%= key %>"><%= col.send(key) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
